<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.infobox.hasnat.ume.ume">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Welcome.WelcomeActivity"
            android:configChanges="orientation|screenSize"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Welcome.IntroActivity"
            android:configChanges="orientation|screenSize"
            />

        <activity android:name=".Home.MainActivity"
            android:configChanges="orientation|screenSize"/>

        <activity android:name=".Login.LoginActivity"
            android:configChanges="orientation|screenSize"
            />

        <activity android:name=".Login.RegisterActivity"
            android:configChanges="orientation|screenSize" />

        <activity
            android:name=".AboutAppActivity"
            android:parentActivityName=".Home.MainActivity"
            android:configChanges="orientation|screenSize"
            >
        </activity>

        <activity android:name=".ProfileSetting.SettingsActivity"
            android:parentActivityName=".Home.MainActivity"
            android:configChanges="orientation|screenSize"/>

        <activity
            android:name=".ProfileSetting.StatusUpdateActivity"
            android:parentActivityName=".ProfileSetting.SettingsActivity"
            android:configChanges="orientation|screenSize">
        </activity>

        <activity android:name=".Peoples.PeoplesActivity"
            android:parentActivityName=".Home.MainActivity"
            android:configChanges="orientation|screenSize"
            >
        </activity>




        <!-- fabric -->
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="f7dc8e6a921afdd8026d4716fb509b70ac2680c5" />

        <!-- Cropping image library -->
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
    </application>

</manifest>